# Télécharger l'icône pour la barre des tâches
curl -o icon.png https://raw.githubusercontent.com/electron/electron/main/default_app/icon.png

# Recompiler l'application
npm run build:win

# Relancer l'application
npm start

# Pour Mac
npm run build:mac

# Initialiser Git
git init

# Ajouter les fichiers
git add .gitignore
git add main.js
git add package.json
git add package-lock.json
git add icon.png
git add license.txt

# Premier commit
git commit -m "Initial commit"

# Créer un fichier ZIP pour la distribution
# Pour Windows
npm run build:win
cd dist
zip -r ../correcteur-texte-windows.zip "Correcteur de Texte Setup.exe" "Correcteur de Texte.exe"
cd ..

# Pour Mac (si sur Mac)
npm run build:mac
cd dist
zip -r ../correcteur-texte-mac.zip "Correcteur de Texte.dmg"
cd ..

# Supprimer le git local si déjà initialisé
rm -rf .git

# Cloner le dépôt existant
git clone https://github.com/Marc-Alban/application-correction.git .

# Configurer git si ce n'est pas déjà fait
git config --global user.name "Marc-Alban"
git config --global user.email "millet.marcalban@gmail.com"

# Ajouter tous les fichiers
git add .gitignore
git add main.js
git add package.json
git add package-lock.json
git add icon.png
git add license.txt

# Ajouter le README.md avec le contenu suivant

# 1. Placez-vous dans le bon dossier
cd C:\xampp\htdocs\code\app

# 2. Configurez Git avec vos identifiants
git config --global user.name "Marc-Alban"
git config --global user.email "millet.marcalban@gmail.com"

# 3. Supprimez le dépôt Git existant s'il y en a un
rm -rf .git

# 4. Initialisez un nouveau dépôt
git init

# 5. Ajoutez l'origine distante
git remote add origin https://github.com/Marc-Alban/application-correction.git

# 6. Ajoutez tous les fichiers
git add .gitignore
git add main.js
git add package.json
git add package-lock.json
git add icon.png
git add license.txt
git add README.md

# 7. Vérifiez le statut
git status

# 8. Faites le commit
git commit -m "Ajout de l'application de correction avec interface système"

# 9. Récupérez la dernière version du dépôt distant
git pull origin main --allow-unrelated-histories

# 10. Poussez vos modifications
git push origin main
